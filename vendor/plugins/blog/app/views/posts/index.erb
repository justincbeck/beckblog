<% if @posts.size > 0 -%>
    <% @posts.each do |post| -%>
      <h2 class="bottom" style="margin-bottom: -10px; padding-top: 10px;">
          <%= link_to post.subject, show_path(post.id) %>
      </h2>
      <span class="small quiet"><%= post.created_at.strftime("%m/%d/%Y %H:%M:%S") %> by <%= User.find(post.user_id).login %></span><br />
      <%= post.body %><br />
      <div style="margin: 10px;">
          <h4 class="bottom">Your Comments (and sometimes mine)</h4>
          <% post.comments.each do |comment| -%>
            <span class="small quiet">
                <%= comment.created_at.strftime("%m/%d/%Y %H:%M:%S") %>
                <% if comment.username != nil && comment.username != '' -%>
                     by <%= comment.username %><br/>
                <% else %>
                    <b>by Anonymous</b><br/>
                <% end -%>
            </span>
            <hr/>
            <%= comment.body %><br/><br/>
          <% end -%>
          <div id="comment_form">
              <% remote_form_for :comment, @comment,
                            :url => { :controller => 'comments', :action => 'create', :id => post },
                            :success => "location.reload(true)" do |f| %>
                  Username:<br />
                  <%= f.text_field :username %><br />
                  Comment:<br />
                  <%= f.text_area :body, :cols => 60, :rows => 6 , :style => "margin-top: 0px;"%><br />
                  <%= submit_tag "Comment" %>
              <% end %>
          </div>
      </div>
   <% end %>
<% else %>
    <p style="padding: 50px 0 0 30px;">There are currently no blog posts.  I am writing one now and will post it shortly.</p>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
<% end %>
