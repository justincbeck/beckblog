<div class="prepend-1" style="padding-top: 15px;">
    <%= @comment.post %>

    <% form_for :comment, @comment, :url => { :action => "create" } do |f| %>
        Username:<br />
        <%= f.text_field :username %><br /><br />
        Comment:<br />
        <%= f.text_area :body, :size => "60x12" %><br />
        <%= submit_tag "Comment" %>
    <% end %>
</div>