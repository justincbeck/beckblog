<% remote_form_for :comment, @comment,
              :url => { :controller => 'comments', :action => 'create', :id => post },
              :success => "location.reload(true)" do |f| %>
    Username:<br />
    <%= f.text_field :username %><br />
    Email (Optional):<br />
    <%= f.text_field :email %><br />
    <%= show_simple_captcha %>
    Comment:<br />
    <%= f.text_area :body, :cols => 60, :rows => 6 , :style => "margin-top: 0px;"%><br />
    <%= submit_tag "Comment" %>
<% end %>
