<div class="prepend-1" style="padding-top: 15px;">
    <% form_for :post, @post, :url => { :action => "create" } do |f| %>
        Subject:<br />
        <%= f.text_field :subject %><br /><br />
        Body:<br />
        <%= f.text_area :body, :size => "50x15" %><br />
        Published: <%= f.check_box :published %>
        <br /><br />
        <%= submit_tag "Create" %>
<% end %>
</div>
